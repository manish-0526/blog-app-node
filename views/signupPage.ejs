<!DOCTYPE html>
<html lang="en">
<%- include("./partials/head.ejs", {'title': 'Signup' }) %>

    <body>
        <%- include("./partials/nav.ejs") %>

            <div class="container signup-form">
                <h1>Sign Up</h1>
                <p>Please fill in this form to create an account.</p>
                <% if(data.error) {%>
                    <div class="form-errors">
                        <% data.error.messages.forEach(error=>{%>
                            <div class="form-error">
                                <%= error %>
                            </div>
                            <%})%>
                    </div>
                    <% } %>
                        <form action="/signup" method="POST">
                            <div class="signup-form-name">
                                <div>
                                    <label for="fname">First Name</label>
                                    <input type="text" id="fname" name="fname" placeholder="First Name" required
                                        value="<%= data.error ? data.error.data.fname: ''%>">
                                </div>
                                <div>
                                    <label for="lname">Last Name</label>
                                    <input type="text" id="lname" name="lname" placeholder="Last Name" required
                                        value="<%= data.error ? data.error.data.lname: ''%>">
                                </div>
                            </div>

                            <label for="email">Email</label>
                            <input type="text" id="email" name="email" placeholder="Enter your email" required
                                value="<%= data.error ? data.error.data.email: ''%>">

                            <label for="password">Password</label>
                            <input type="text" id="password" name="password" placeholder="Enter your Password" required
                                value="<%= data.error ? data.error.data.password: ''%>">

                            <button type="submit">Sign Up</button>
                        </form>
                        <p>ALready have an account?
                            <a href="/login" style="text-decoration: none;">
                                Login
                            </a>
                        </p>
            </div>

    </body>

</html>